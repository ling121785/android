<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/general_item_height_larger"
    android:orientation="horizontal"
    style="@style/base_padding_horizontal"
    android:background="@color/white"
    android:gravity="center_vertical"
     >
   <RelativeLayout
       android:layout_width="60dp"
       android:layout_height="43dp">
   <toolbox.ll.com.common.widget.CircleImageView
       android:id="@+id/item_iv_avatar"
       android:layout_width="@dimen/fans_avatar"
       android:layout_height="@dimen/fans_avatar"
       android:textColor="@color/fontGray"
       android:src="@drawable/ic_avatar_default"
       />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:padding="@dimen/padding_smallest"
          android:drawableLeft="@drawable/ic_grade"
          android:textSize="@dimen/font_size_smallest"
          android:textColor="@color/white"
          android:text="22"
          android:gravity="center_vertical"
          android:background="@drawable/bg_yellow"/>
   </RelativeLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="@dimen/fans_avatar"
       android:orientation="vertical"
       android:layout_weight="1"
       android:layout_marginLeft="@dimen/margin_smaller">
      <TextView
          android:id="@+id/item_tv_nick"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/fontBlack"
          android:textSize="@dimen/font_size_small"
          android:text="北风吹破"
          android:layout_weight="1"
          />
      <TextView
          android:id="@+id/income_tv_desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/fontGray"
          android:textSize="@dimen/font_size_smaller"
          android:layout_weight="1"
          android:text="以为懂得，所以慈悲"/>

   </LinearLayout>


</LinearLayout>