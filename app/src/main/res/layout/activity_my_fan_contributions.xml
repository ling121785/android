<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toolbox.ll.com.toolbox.ui.user.MyFanContributionsActivity"
    android:orientation="vertical">
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_tab_height"
        app:tabIndicatorColor="@color/colorPrimarySub"
        app:tabSelectedTextColor="@color/colorPrimarySub"
        app:tabTextColor="@color/tabFontColor"
        app:tabMode="fixed"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
