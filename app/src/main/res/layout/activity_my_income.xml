<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/income_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/general_item_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_top_time_height"
            style="@style/base_padding_horizontal"
            android:background="@color/general_time_bg">
            <TextView
                android:id="@+id/income_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2018-02-03至2018-03-03"
                android:textColor="@color/fontGray"
                android:textSize="@dimen/font_size_small"/>
            <ImageView
                android:id="@+id/income_ib_timeFiler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/income_top_height"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计收益"
                android:textColor="@color/fontBlack"
                android:textSize="@dimen/font_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontRed"
                android:textSize="25sp"
                android:text="500000.00"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <toolbox.ll.com.pulltorefresh.pulltorefresh.PullToRefreshRecyclerView
        android:id="@+id/income_lv_list"
        android:layout_below="@id/income_layout_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

</RelativeLayout>
