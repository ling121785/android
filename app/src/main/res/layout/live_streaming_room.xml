<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:background="@drawable/bg_gray_default">
        <toolbox.ll.com.common.widget.CircleImageView
            android:id="@+id/live_iv_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:border_width="1dp"
            android:layout_marginLeft="@dimen/margin_smallest"
            android:layout_marginRight="@dimen/margin_smallest"
            app:border_color="@android:color/white"
            android:src="@drawable/ic_avatar_default"/>
         <LinearLayout
             android:id="@+id/live_room_info"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:orientation="vertical"
            >
             <TextView
                 android:id="@+id/live_tv_nick"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="直播LIVE"
                 android:textSize="@dimen/font_size_smaller"
                 android:textColor="@color/white"
                 android:gravity="center_vertical"/>
             <TextView
                 android:id="@+id/live_tv_roomCount"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="30万人"
                 android:textSize="@dimen/font_size_smaller"
                 android:textColor="@color/white"
                 android:gravity="center_vertical"/>

         </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/live_ls_member"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:scrollbars="none"
            android:layout_weight="1"></android.support.v7.widget.RecyclerView>
        <ImageView
            android:id="@+id/live_iv_merberClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"/>

    </LinearLayout>
    <TextView
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:paddingLeft="@dimen/margin_smaller"
        android:paddingRight="@dimen/margin_smaller"
        android:background="@drawable/bg_yellow"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_smaller"
        android:text="贡献：1000000"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/live_tv_roomId"
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:paddingLeft="@dimen/margin_smaller"
        android:paddingRight="@dimen/margin_smaller"
        android:background="@drawable/bg_gray_default"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:text="房间ID:5656787"
        android:textSize="@dimen/font_size_smaller"
        android:gravity="center_vertical"/>
    <ListView
        android:id="@+id/live_lv_msg"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"></ListView>
    <ListView
        android:id="@+id/live_lv_gift"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_above="@id/live_lv_msg"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@drawable/bg_gray_default"
            android:layout_weight="1"
            android:hint="撩她一下"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/margin"
            android:textSize="@dimen/font_size_small"
            android:layout_marginRight="@dimen/margin_smaller"/>
        <ImageView
            android:id="@+id/live_iv_redPacket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margin_smaller"
            android:layout_marginLeft="@dimen/margin_smaller"
            android:src="@drawable/ic_red_packet"/>
        <ImageView
            android:id="@+id/live_iv_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margin_smaller"
            android:layout_marginLeft="@dimen/margin_smaller"
            android:src="@drawable/ic_share"/>
        <ImageView
            android:id="@+id/live_iv_connect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margin_smaller"
            android:layout_marginLeft="@dimen/margin_smaller"
            android:src="@drawable/ic_connecting_voice"/>
        <ImageView
            android:id="@+id/live_iv_gift"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margin_smaller"
            android:layout_marginLeft="@dimen/margin_smaller"
            android:src="@drawable/ic_gift"/>
    </LinearLayout>

</RelativeLayout>
